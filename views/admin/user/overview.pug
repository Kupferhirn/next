extends ../../layout

include ../../modules/sessionList

block content

  .row
    include _nav

    .col-md-9

      include ../../partials/flash

      .panel.panel-default
        .panel-heading
          h3.panel-title XP
        .panel-body
          +xpBar(profile)

      if user && user.admin && profile.teamspeakLinked
        .panel.panel-default
          .panel-heading
            h3.panel-title Teamspeak-Tracking
          .panel-body
            p
              b Onlinezeit:
              br
              = utils.msToHumanReadable(profile.teamspeakTracking.onlineTime)
            p
              b Aktive Zeit:
              br
              = utils.msToHumanReadable(profile.teamspeakTracking.activeTime)