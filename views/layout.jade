include mixins/form
include mixins/timestamp
include mixins/markdownEditor
include mixins/nav
include mixins/profileCard

doctype html
html(lang='de', prefix='og: http://ogp.me/ns#')
  head
    include partials/head
    block head
  body

    #wrapper
      include partials/nav

      include partials/accountProgress

      #content-wrapper
        #content.container
          block content

    #footer
      .container
        include partials/footer

    != js('js/main.js')
