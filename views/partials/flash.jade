#flash
  if messages.errors
    .alert.alert-danger
      button.close(type='button', data-dismiss='alert', aria-hidden='true') &times;
      for error in messages.errors
        div!= error.msg
  if messages.info
    .alert.alert-info
      button.close(type='button', data-dismiss='alert', aria-hidden='true') &times;
      for info in messages.info
        div!= info.msg
  if messages.success
    .alert.alert-success
      button.close(type='button', data-dismiss='alert', aria-hidden='true') &times;
      for success in messages.success
        div!= success.msg